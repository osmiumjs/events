{
	"compilerOptions": {
		"target"           : "ESNext",
		"lib"              : [
			"DOM",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ESNext"
		],
		"declaration"      : true,
		"declarationDir"   : "./defs/",
		"module"           : "commonjs",
		"outDir"           : "dist",
		"resolveJsonModule": true,
		"sourceMap"        : true,
		"strict"           : true,
		"types"            : ["mocha"]
	},
	"include"        : [
		"./src/**/*"
	],
	"exclude"        : [
		"node_modules",
		"dist",
		"test"
	]
}
